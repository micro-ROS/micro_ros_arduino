
#include <stdio.h>
#include <stdbool.h>
#include <sys/time.h>

int clock_gettime(clockid_t unused, struct timespec *tp)
{
  (void) unused;
  uint64_t m = micros();
  tp->tv_sec = m / 1000000;
  tp->tv_nsec = (m % 1000000) * 1000;
  return 0;
}

