size_t arduino_transport_write(uint8_t* buf, size_t len, uint8_t* errcode)
{
    (void) errcode;
    return  vcp_write(buf, len);;
}

size_t arduino_transport_read(uint8_t* buf, size_t len, int timeout, uint8_t* errcode)
{
    (void) errcode;
    uint32_t start_time = drv_micros() * 1000;
    size_t readed = 0;

    while((readed < len) && (((drv_micros()*1000) - start_time) < (uint32_t) timeout)){
      while((readed < len) && vcp_is_available()){
        buf[readed++] = vcp_getch();
      }
    }
    
    return readed;
}